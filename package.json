{
  "name": "ref-napi-ex",
  "description": "Fork of node-ffi-napi/ref-napi with external ArrayBuffer support",
  "engines": {
    "node": ">= 12.0"
  },
  "keywords": [
    "native",
    "buffer",
    "extensions",
    "c++",
    "pointer",
    "reference",
    "dereference",
    "type",
    "int",
    "long",
    "float",
    "double",
    "byte",
    "64",
    "napi"
  ],
  "version": "3.0.5",
  "license": "MIT",
  "author": "Luxel Tao (https://github.com/luxel)",
  "repository": {
    "type": "git",
    "url": "git://github.com/luxel/ref-napi.git"
  },
  "main": "./lib/ref.js",
  "scripts": {
    "docs": "node docs/compile",
    "test": "nyc mocha --expose-gc",
    "test-ab": "nyc mocha --expose-gc test/external_arraybuffer.js",
    "install": "node-gyp-build",
    "prebuild": "prebuildify --napi --tag-armv",
    "prebuild-node14": "prebuildify --napi --tag-armv --target 14.17.6"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "get-symbol-from-current-process-h": "^1.0.2",
    "node-addon-api": "^3.0.0",
    "node-gyp-build": "^4.2.1"
  },
  "devDependencies": {
    "dox": "0.9.0",
    "highlight.js": "^10.0.0",
    "jade": "^1.11.0",
    "marked": "^1.0.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "prebuildify": "^3.0.4",
    "prebuildify-ci": "^1.0.5",
    "weak-napi": "^2.0.0"
  }
}
